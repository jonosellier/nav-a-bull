<head>
    <%- include('partial/head'); -%>
        <script src="favs.js"></script>
</head>

<body onload="pageLoaded()">
    <div class="app-content navbar-padding">
        <ul class="mdc-list" id="place-list">
            <!-- list populates here -->
        </ul>
        <button class="mdc-fab mdc-fab--extended" onclick="onClickAddPlace()">
            <span class="material-icons mdc-fab__icon">add</span>
            <span class="mdc-fab__label">Add a Place</span>
        </button></a>
        <div class="bottom-padding"></div>
    </div>
    <header class="mdc-top-app-bar">
        <div class="mdc-top-app-bar__row">
            <section class="mdc-top-app-bar__section mdc-top-app-bar__section--align-start">
                <button class="material-icons mdc-top-app-bar__navigation-icon mdc-icon-button" onclick="showHideNav()">menu</button>
                <span class="mdc-top-app-bar__title">Favorites</span>
            </section>
